{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "data": {"url": "https://raw.githubusercontent.com/william-1003/FIT3179/main/Visualisation%202/data/global-energy-by-type.csv"},
  "background": "#f5fffa",

  "params": [
  {
    "name": "start_year",
    "value": 1800,
    "bind": {
      "input": "range",
      "min": 1800,
      "max": 2018,
      "step": 1,
      "name": "Start year"
    }
  },
  {
    "name": "end_year",
    "value": 2019,
    "bind": {
      "input": "range",
      "min": 1810,
      "max": 2019,
      "step": 1,
      "name": "End year"
    }
  },
  {
    "name": "energy_type",
    "value": null,
    "bind": {
      "input": "select",
      "options": [
        null,
        "Wind",
        "Oil",
        "Nuclear",
        "Hydropower",
        "Traditional bimass",
        "Other renewables",
        "Biofuels",
        "Solar",
        "Coal",
        "Gas"
      ],
      "labels":[
        "Show all",
        "Wind",
        "Oil",
        "Nuclear",
        "Hydropower",
        "Traditional biomass",
        "Other renewables",
        "Biofuels",
        "Solar",
        "Coal",
        "Gas"
      ],
      "name": "Energy type"
    }
  }
],

"transform": [
  {"filter": "energy_type == null || datum.energy_type == energy_type"},
  {"filter": {"timeUnit": "year", "field": "year", "range": ["start_year","end_year"]}}
],

  "mark": "area",
  "encoding": {
    "x": {
    "timeUnit": "year", "field": "year",
    "axis": {"format": "%Y"},
    "title": "Year"
    },
    "y": {
      "aggregate": "sum", "field": "power_consumption",
      "title": "Global energy consumption (TWh)"
    },
    "color": {
      "field": "energy_type",
      "scale": {"range": ["#23402b","#000000","#dcebca","blue","#eda65a","#4d2105","#2bff00","yellow","green","grey"]},
      "title": "Energy type"
    },
    "tooltip": [
      {"timeUnit": "year", "field": "year", "title": "Year"},
      {"field": "energy_type", "type": "nominal", "title": "Energy source"},
      {"field": "power_consumption", "type": "quantitative", "title": "Power consumption (TWh)"}
    ]
  }
}